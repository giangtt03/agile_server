<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Categories</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: 'VT323', monospace;
            background-color: transparent;
        }
        /* Sidebar styles */
        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #f8f9fa;
            padding-top: 3rem;
            overflow-y: auto;
            z-index: 1;
        }

        .sidebar-nav-link {
            padding: 10px;
            color: #000;
            text-decoration: none;
            display: block;
            font-family: 'VT323', monospace;
        }

        .sidebar-nav-link:hover {
            background-color: transparent;
        }

        .sidebar-brand {
            padding: 20px;
            font-weight: bold;
            color: #000;
            text-decoration: none;
            font-family: 'VT323', monospace;
        }

        /* Container styles */
        .container {
            margin-left: 420px;
            padding: 20px;
        }

        h1 {
            font-family: 'VT323', monospace;
            text-align: center;
            margin-top: 20px;
            font-size: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            padding: 20px;
            text-align: center;
            border: 1px solid #ddd;
            word-wrap: break-word;
        }

        thead tr {
            background-color: #f0f0f0;
        }

        tbody tr,
        tbody td {
            background-color: transparent !important;
        }

        th {
            font-size: 18px;
            font-family: 'VT323', monospace;
        }

        td {
            font-size: 16px;
            font-family: 'VT323', monospace;
        }

        .btn-sm {
            font-size: 12px;
            font-family: 'VT323', monospace;
        }

        .form-control {
            font-size: 12px;
            font-family: 'VT323', monospace;
        }

        /* Pixel button styles */
        .pixel-btn {
            display: inline-block;
            padding: 10px 20px;
            margin: 5px;
            font-family: 'VT323', monospace;
            font-size: 12px;
            color: #fff;
            background-color: #000;
            text-transform: uppercase;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            border: 2px solid #000;
            box-shadow: 4px 4px 0 #888;
            transition: all 0.1s ease-in-out;
        }

        .pixel-btn:hover {
            box-shadow: 2px 2px 0 #888;
            transform: translate(2px, 2px);
        }

        .pixel-btn:active {
            box-shadow: none;
            transform: translate(4px, 4px);
        }
    </style>
</head>

<body>
    <div class="sidebar">
        <div class="sidebar-nav-link active">
            <div style="width: 100px; height: 100px; overflow: hidden; border-radius: 50%; margin-bottom: 10px;">
                <img src="<%= user.avatar %>" alt="User Avatar" style="width: 100%; height: auto;">
            </div>
            <p style="margin-bottom: 1em;"><%= user.email %></p>
        </div>

        <a href="http://localhost:6002/question" class="sidebar-nav-link active">Quản lý câu hỏi</a>
        <a href="http://localhost:6002/category" class="sidebar-nav-link">Danh sách thể loại </a>
        <a href="http://localhost:6002/test" class="sidebar-nav-link">Quản lý quizz </a>
    </div>

    <h1 class="text-center mt-5">Danh sách thể loại</h1>

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="/category/create" class="pixel-btn">Thêm danh mục</a>
        </div>

        <div class="mb-3">
            <input type="text" id="searchInput" class="form-control" placeholder="Search by category name" onkeyup="searchCategories()">
        </div>

        <table id="categoryTable" class="">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Category Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach((category, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= category.name %></td>
                        <td>
                            <a href="/category/update/<%= category._id %>" class="pixel-btn btn-info btn-sm">
                                <i class="far fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script>
        function searchCategories() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("searchInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("categoryTable");
            tr = table.getElementsByTagName("tr");

            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[1];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
    </script>
</body>

</html>
